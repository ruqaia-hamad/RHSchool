import java.util.InputMismatchException;

public class Validation {
	
	
	public  void validateUsername(String username) throws InputMismatchException {
		String teacherName = "Ruqaia";
       
        if (!username.matches(teacherName)) {
            throw new InputMismatchException("Invalid username.");
        }
    }
	public void validatePassword(int password) throws InputMismatchException {
		int userPassword = 1234;
		
		if(password!=userPassword) {
			  throw new InputMismatchException("Invalid password");
		}
       
	}

}
