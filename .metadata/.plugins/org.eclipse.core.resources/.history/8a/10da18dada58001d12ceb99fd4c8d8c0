
public class Validation {
	
	
	public  void validateUsername(String username) throws IllegalArgumentException {
		String teacherName = "Ruqaia";
       
        if (!username.matches(teacherName)) {
            throw new IllegalArgumentException("Invalid username.");
        }
    }
	public void validatePassword(int password) throws NumberFormatException {
		int userPassword = 1234;
		
		if(password!=userPassword) {
			  throw new NumberFormatException("Invalid password");
		}
       
	}

}
